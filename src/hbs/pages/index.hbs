---
title: <%= home.title %>
description: <%= home.description %>
site.nav.home.active: <% site.nav.home.active = true %>
site.nav.prices.active: <% site.nav.prices.active = false %>
site.nav.contacts.active: <% site.nav.contacts.active = false %>
---

{{#with home}}

<article>

  <h1>{{heading}}</h1>

  <div class="columns">

    <div class="column">

      <ul>
        {{#each skills}}
          <li>{{.}}</li>
        {{/each}}
      </ul>

      <p>{{{sewing}}}</p>
      <p>{{{uniform}}}</p>
      <p>{{{selling}}}</p>

    </div>

    <div class="column img-container">

      <img src="img/drabuziu-taisykla-antakalnyje.jpg" alt="{{welcome-img}}"/>

    </div>

  </div>

</article>

{{/with}}
