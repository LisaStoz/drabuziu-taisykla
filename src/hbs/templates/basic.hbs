    <head>
        <base href="{{env.base}}" >
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title>{{site.title}} - {{#if title}}{{title}} - {{/if}}{{site.title-info}}</title>
        <meta name="description" content="{{description}}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="icon" type="image/ico" href="/img/favicon.ico">
        <link rel="stylesheet" href="css/main.css">

        <!--[if lt IE 9]><script src="js/lib/html5shiv.min.js"></script><![endif]-->
    
        <script>

        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-28278702-1']);
        _gaq.push(['_setDomainName', 'none']);
        _gaq.push(['_setAllowLinker', true]);
        _gaq.push(['_trackPageview']);

        (function() {
          var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
          ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
        })();

        </script>

    </head>
    <body>

      <div class="wrapper">


        <header>

          <p class="site-title"><a href="/">{{site.title}}</a></p>
          <p class="small">{{{site.intro}}}</p>

          <nav>
            <ul class="size-reset">
              <li class="size-init {{#if site.nav.home.active}}active{{/if}}"><a href="{{env.base}}" class="h2">{{site.nav.home.label}}</a></li>
              {{#with site.nav.contacts}}
              <li class="size-init {{#if active}}active{{/if}}"><a href="{{link}}" class="h2">{{label}}</a></li>
              {{/with}}
            </ul>
          </nav>

        </header>

        <div class="main {{code}}">

          {{>body}}

        </div>

        <footer class="small">
          <div>
            <div>&copy; 2010-2014 DrabužiųTaisykla.lt</div>
            <div>{{site.credit}}<a href="http://arcsin.se/" target="_blank">Arcsin</a></div>
          </div>
        </footer>


      </div>

      <script src="js/main.js"></script>

    </body>
</html>
